<div class="wormhole-link-details">
  <h4>Wormhole Link Details</h4>
  <dl>
    {{#if wormhole_data.signature}}
    <dt>Signature ID</dt>
    <dd class="signature">{{ wormhole_data.signature }}</dd>
    {{/if}}

    <dt>From</dt>
    <dd class="system">{{ source.system.name }}</dd>
        
    <dt>To</dt>
    <dd class="system">{{ target.system.name }}</dd>

    <dt>Expires</dt>
    <dd class="expires-on">{{ format_ts_short wormhole_data.expires_on }}</dd>
    
    <dt>Last Updated</dt>
    <dd class="updated-at">{{ format_ts_short updated_at }}</dd>
  </dl>
  
  <h4>Jump Estimates</h4>
  <dl>
    {{#if wormhole_data.code}}
    <dt>Jump Code</dt>
    <dd class="code">{{ wormhole_data.code }}</dd>
    {{/if}}

    {{#if wormhole_data.lifespan_estimate}}
    <dt>Lifespan</dt>
    <dd class="lifespan">{{ wormhole_data.lifespan_estimate }}</dd>
    {{/if}}
    
    {{#if wormhole_data.jump_mass}}
    <dt>Jump Limit</dt>
    <dd class="jump-mass">{{ add_commas wormhole_data.jump_mass }} KG</dd>
    {{/if}}
    
    {{#if wormhole_data.mass_total}}
    <dt>Mass Left</dt>
    <dd class="mass">{{ add_commas wormhole_data.mass_total }} KG</dd>
    {{/if}}

    {{#if wormhole_data.mass_total}}
    <dt>Allowed Ships</dt>
    <dd class="permitted-ships">
      {{#each permitted_ships }}
      <img src="/images/ship-icons/{{this}}.png" title="{{this}}" alt="{{this}}" />
      {{/each}}
    </dd>
    {{/if}}
  </dl>
  
  <h4>Update Link Actions</h4>
  <a class="btn" onclick="UIPanels.updateWormholeLinkPanel(this, '{{ source.system.id }}', '{{ target.system.id}}')" title="Update">
    <i class="fa fa-{{ui_icon 'info'}}"></i> Update
  </a>

  <a class="btn" onclick="updateWormholeLink(this, '{{ source.system.id }}', '{{ target.system.id}}', 'Wormhole collapsed')" title="Close">
    <i class="fa fa-{{ui_icon 'close'}}"></i> Clear
  </a>  
</div>
